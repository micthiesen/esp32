{
  "languages": {
    "C": {
      "language_servers": ["clangd"],
      "format_on_save": {
        "external": {
          "command": "clang-format",
          "arguments": []
        }
      },
      "tab_size": 4,
      "hard_tabs": false
    },
    "C++": {
      "language_servers": ["clangd"],
      "format_on_save": {
        "external": {
          "command": "clang-format",
          "arguments": []
        }
      },
      "tab_size": 4,
      "hard_tabs": false
